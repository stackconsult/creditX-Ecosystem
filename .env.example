# ============================================================================
# creditX Ecosystem - Enterprise Environment Configuration
# Dragonfly Native | Spaceship Hyperlift | Multi-Tenant
# ============================================================================

# =========================
# APPLICATION
# =========================
APP_NAME=creditx-ecosystem
NODE_ENV=production
SPACES_ENV=production
SPACES_REGION=us-phx-1
DEBUG=false

# =========================
# DATABASE (PostgreSQL 17)
# =========================
DATABASE_URL=postgresql://ecosystem:CHANGE_ME@postgres.internal:5432/ecosystem
DB_MIN_CONNECTIONS=5
DB_MAX_CONNECTIONS=20
DB_COMMAND_TIMEOUT=60

# =========================
# CACHE (Dragonfly - Redis Compatible)
# =========================
CACHE_HOST=dragonfly-cache.internal
CACHE_PORT=6379
CACHE_DB_MAIN=0
CACHE_TIMEOUT_MS=5000
CACHE_MAX_POOL_SIZE=50
CACHE_KEY_PREFIX=creditx:

# =========================
# AI PROVIDERS
# =========================
OPENAI_API_KEY=sk-proj-your-key-here
ANTHROPIC_API_KEY=sk-ant-your-key-here
LANGCHAIN_API_KEY=ls-your-key-here
COPILOTKIT_API_KEY=ck_your-key-here
DEFAULT_AI_MODEL=gpt-4-turbo-preview

# Local AI (Optional - for owned models)
LOCAL_MODEL_ENABLED=false
LOCAL_MODEL_ENDPOINT=http://localhost:8080

# =========================
# OBSERVABILITY
# =========================
PROMETHEUS_ENDPOINT=http://prometheus.internal:9090
JAEGER_AGENT_HOST=jaeger.internal
JAEGER_AGENT_PORT=6831
LOG_LEVEL=INFO
LOG_FORMAT=json

# =========================
# SECURITY
# =========================
JWT_PUBLIC_KEY=
JWT_ALGORITHM=RS256
OAUTH_ISSUER=https://auth.ecosystem.ai
ENCRYPTION_KEY=base64-encoded-32-byte-key

# =========================
# SPACESHIP INFRASTRUCTURE
# =========================
SPACESHIP_API_KEY=
HYPERLIFT_API_KEY=
HYPERLIFT_PROJECT_ID=creditx-ecosystem

# CDN (Included in bundle)
CDN_URL=https://cdn.ecosystem.ai

# Spacemail (Included in bundle)
SPACEMAIL_API_KEY=
SPACEMAIL_DOMAIN=mail.ecosystem.ai

# Thunderbolt E2EE (Included in bundle - FREE)
THUNDERBOLT_DOMAIN=ecosystem.thunderbolt.spaceship.com
THUNDERBOLT_ENABLED=true

# FastVPN (Included in bundle)
FASTVPN_API_KEY=
FASTVPN_ENABLED=true

# =========================
# AGENT ORCHESTRATION
# =========================
AGENT_REGISTRY_URL=http://agent-mesh.internal
ORCHESTRATOR_URL=http://orchestrator.internal

# =========================
# MULTI-TENANCY
# =========================
DEFAULT_TENANT_ID=default
TENANT_SCHEMA_PREFIX=tenant_
MAX_TENANTS=1000

# =========================
# FEATURE FLAGS
# =========================
FEATURE_CREDITX_ENABLED=true
FEATURE_91_APPS_ENABLED=true
FEATURE_GLOBAL_AI_ALERT_ENABLED=true
FEATURE_GUARDIAN_AI_ENABLED=true
FEATURE_STOLEN_PHONES_ENABLED=true
FEATURE_LOCAL_AI_ENABLED=false

# =========================
# INTEGRATIONS (Optional)
# =========================
# Salesforce
SALESFORCE_CLIENT_ID=
SALESFORCE_CLIENT_SECRET=
SALESFORCE_INSTANCE_URL=

# Gmail
GMAIL_CLIENT_ID=
GMAIL_CLIENT_SECRET=

# LinkedIn
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=

# SAP
SAP_API_KEY=
SAP_BASE_URL=

# NetSuite
NETSUITE_ACCOUNT_ID=
NETSUITE_CONSUMER_KEY=
NETSUITE_CONSUMER_SECRET=

# =========================
# S3-COMPATIBLE STORAGE
# =========================
S3_ENDPOINT=https://storage.spaceship.com
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_BUCKET=creditx-ecosystem
S3_REGION=us-phx-1

# =========================
# DOCKER REGISTRY
# =========================
REGISTRY_URL=registry.spaceship.com
REGISTRY_USERNAME=creditx-ecosystem
